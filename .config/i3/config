# shortcuts 
set $exnosup exec --no-startup-id
set $exallnosup exec_always --no-startup-id
set $scriptdir /home/nic/Scripts

# set mod key to windows key
set $mod Mod4

# font 
#font pango:Iosevka Term Light 13
font pango:Terminus (TTF) Medium 14

# colors main
set $bar_background #2f3435
set $bar_font #E6E8EE
set $bar_main #33302d
set $bar_accent #d9d4c9
set $border_focused #777b72
set $border_unfocused #494b46

# class                 border  backgr. text    indicator child_border
client.focused          $border_focused #285577 #ffffff #B0B3A1   #B0B3A1
client.focused_inactive #333333 #5f676a #ffffff #484e50   #666C61
client.unfocused        #333333 #222222 #888888 #292d2e   #1E292F
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

# i3blocks bar
bar {
    position top
    status_command i3blocks
    #i3bar_command i3bar --transparency
    colors {
        background $bar_background
        separator  $bar_font
        statusline $bar_font
        # colorclass    border   background  text
        focused_workspace  $bar_accent $bar_main $bar_accent
        inactive_workspace #4d636a $bar_accent $bar_main
        urgent_workspace   #900000 #900000 #ffffff
        binding_mode       #900000 #900000 #ffffff
        active_workspace   #4d636a #5f676a #ffffff
    }
    separator_symbol "|"
    workspace_min_width 30
}


# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
$exnosup xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
$exnosup nm-applet

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# dropdown menus
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 700 400
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
#$exnosup kitty --name dropdown
$exnosup st -n dropdown

for_window [instance="cmus"] floating enable
for_window [instance="cmus"] resize set 1000 600
for_window [instance="cmus"] move scratchpad
for_window [instance="cmus"] border pixel 5
#$exnosup kitty --name cmus -o font_size=18 cmus
$exnosup st -n cmus -e cmus

# for javafx projects ran from intellij
