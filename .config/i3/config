# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# wallpaper
set $wallpaper /home/nic/Pictures/wallpapers/main.jpg
set $wallpaper_alt /home/nic/Pictures/wallpapers/alt2.jpg
bindsym $mod+w $exnosup feh --bg-fill $wallpaper_alt && xrdb Ìƒ~/.Xresources
bindsym $mod+Shift+w $exnosup feh --bg-fill $wallpaper && xrdb ~/.XresourcesALT
$exallnosup feh --bg-fill $wallpaper

# shutdown / restart / suspend...
set $mode_system System (l) lock, (e) logout, (r) reboot, (h) hibernate, (CTRL+s) shutdown

mode "$mode_system" {
    bindsym l $exnosup bash $scriptdir/lock, mode "default"
    bindsym e $exnosup i3-msg exit, mode "default"
    bindsym r $exnosup systemctl reboot, mode "default"
    bindsym h $exnosup $i3lockwall && systemctl hibernate, mode "default"
    bindsym Ctrl+s $exnosup systemctl poweroff -i, mode "default"

    bindsym Escape mode "default"
}

bindsym $mod+Ctrl+q mode "$mode_system"

